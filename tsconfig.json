{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@app/*": ["*"],
      "@ui/*": ["ui/*"],
      "@api/*": ["api/*"],
      "@services/*": ["services/*"],
      "@state/*": ["state/*"]
    }
  },
  "include": ["src/**/*", "src/types/**/*"]
}
